@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap');

body {
  margin: 0;
  font-family: 'Roboto', sans-serif;
  overflow: hidden;
  background-color: #000;
}

.background-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('anime-character-sword.gif') no-repeat center center fixed;
  background-size: cover;
  z-index: -1;
  background-attachment: scroll;
  opacity: 1;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #fff;
  padding: 20px;
  box-sizing: border-box;
}

.button-container {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  max-width: 1100px;
}

.game-button {
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  text-decoration: none;
  font-size: 18px;
  font-weight: bold;
  padding: 12px 20px;
  border-radius: 10px;
  border: 2px solid #fff;
  text-transform: uppercase;
  letter-spacing: 3px;
  transition: all 0.3s ease;
  min-width: 180px;
  max-width: 250px;
  min-height: 50px;
  max-height: 60px;
  height: auto;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  flex: 1 1 220px;
  box-shadow: 0 0 15px rgba(128, 0, 128, 0.8), 0 0 30px rgba(148, 0, 211, 0.8);
}

.game-button:hover {
  background-color: #fff;
  color: #000;
  transform: scale(1.1);
  box-shadow: 0 0 15px rgba(128, 0, 128, 0.8), 0 0 30px rgba(148, 0, 211, 0.8);
}

.game-button:active {
  background-color: #fff;
  color: #000;
  transform: scale(1);
  box-shadow: 0 0 5px rgba(128, 0, 128, 0.8), 0 0 10px rgba(148, 0, 211, 0.8);
}

.fun-text {
  font-size: 22px;
  color: #fff;
  margin-top: 30px;
  font-weight: 500;
  letter-spacing: 2px;
  text-align: center;
  text-shadow: 0 0 10px rgba(128, 0, 128, 0.8), 0 0 20px rgba(148, 0, 211, 0.8);
  max-width: 80%;
}

.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.7);
}

.modal-content {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  margin: 15% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
  max-width: 400px;
  border-radius: 10px;
  backdrop-filter: blur(5px);
  font-family: 'Roboto', sans-serif;
}

.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}

@media (max-width: 768px) {
  .content-wrapper {
    padding: 10px;
    height: auto;
  }

  .game-button {
    font-size: 18px;
    padding: 20px 25px;
    min-width: 220px;
    min-height: 60px;
    max-width: 280px;
    height: auto;
    margin-bottom: 15px;
    box-shadow: 0 0 10px rgba(128, 0, 128, 0.8), 0 0 20px rgba(148, 0, 211, 0.8);
  }

  .fun-text {
    font-size: 24px;
    margin-top: 20px;
    max-width: 100%;
  }

  .button-container {
    flex-direction: column;
    align-items: center;
  }

  .background-container {
    background-position: 44% center; /* Сдвиг фона на 20% влево на мобильных */
    background-size: cover;
    background-attachment: scroll;
  }
}
